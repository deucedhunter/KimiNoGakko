@model KimiNoGakko.Models.Course

@{
    ViewData["Title"] = "Utwórz";
}

<h2>@ViewData["Title"]</h2>

<h4>Kurs</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Subject.Name" class="control-label"></label>
                <select asp-for="SubjectID" class="form-control" asp-items="ViewBag.SubjectItems"></select>
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <select asp-for="EmployeeID" class="form-control" asp-items="ViewBag.EmployeeItems"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary" /> |
                <a asp-action="Index">Wróć do listy</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
